{
  "name": "auto-rpg-ts",
  "version": "1.0.0",
  "description": "TypeScript RPG Auto-Battler REST API with Clean Architecture",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "seed": "ts-node src/infrastructure/DatabaseSeeder.ts",
    "seed:jobs": "ts-node src/infrastructure/DatabaseSeeder.ts jobs",
    "seed:skills": "ts-node src/infrastructure/DatabaseSeeder.ts skills",
    "seed:enemies": "ts-node src/infrastructure/DatabaseSeeder.ts enemies",
    "seed:dungeons": "ts-node src/infrastructure/DatabaseSeeder.ts dungeons",
    "seed:clear": "ts-node src/infrastructure/DatabaseSeeder.ts clear"
  },
  "keywords": [
    "rpg",
    "auto-battler",
    "typescript",
    "express",
    "mongodb",
    "clean-architecture",
    "rest-api"
  ],
  "author": "Auto-RPG Developer",
  "license": "MIT",
  "dependencies": {
    "@types/winston": "^2.4.4",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "json-rules-engine": "^6.5.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.14",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.1",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
